<div class='comments'>
  <h2>Komentarze</h2>
  <form id='comment'>
    <textarea id='body'></textarea>
    <button {{action 'comment' model}}>Dodaj</button>
    <div class="clear"></div>
  </form>
  {{#if model.comments}}
    <ul>
      {{#each model.comments as |comment|}}
        <li>
          <strong>{{comment.nickname}}</strong>
          <span class='date'>{{comment.created_at}}</span>
          <div class='comment-body'>{{comment.body}}</div>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>Brak komentarzy.</p>
  {{/if}}
</div>
