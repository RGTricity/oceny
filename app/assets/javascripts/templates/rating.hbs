<div class='rating'>
  <h2>Oceny</h2>

  <p>
    {{#each rate in defaultRates}}
      <button class='rate' {{action 'rate' model rate}}>{{rate}}</button>
    {{/each}}
  </p>

  {{#if rates}}
    {{#unless pending_submission}}
      <p>Åšrednia ocen: {{average_rate}}</p>
    {{/unless}}
    <ul>
      {{#each rate in rates}}
        <li>{{rate.nickname}}: {{rate.value}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>Brak ocen.</p>
  {{/if}}
</div>
